{
  "name": "react-vite-h5",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint:css": "stylelint --aei *.css,*.less --fix src/",
    "eslint": "eslint --ext .tsx,.ts src",
    "init-git-hooks": "npx husky install && npx husky add .husky/pre-commit \"yarn lint-staged\" && npx husky add .husky/commit-msg 'npx --no-install commitlint --edit \"$1\"'"
  },
  "dependencies": {
    "@types/node": "^18.7.13",
    "@types/react": "^18.0.17",
    "@types/react-dom": "^18.0.6",
    "@vitejs/plugin-react": "^2.0.1",
    "postcss-px-to-viewport-8-plugin": "^1.1.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^4.8.2",
    "vite": "^3.0.7"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@stylelint/postcss-css-in-js": "^0.38.0",
    "@typescript-eslint/eslint-plugin": "^5.35.1",
    "@typescript-eslint/parser": "^5.35.1",
    "eslint": "^7.20.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-import-resolver-typescript": "^3.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-react": "^7.31.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "postcss-syntax": "^0.36.2",
    "stylelint": "^14.11.0",
    "stylelint-config-standard": "^28.0.0",
    "stylelint-order": "^5.0.0"
  },
  "lint-staged": {
    "**/*.{ts,tsx}": [
      "yarn eslint"
    ],
    "**/*.{css,less,scss}": [
      "yarn lint:css"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "echo 'git commit trigger husky pre-commit hook te23t'"
    }
  }
}
